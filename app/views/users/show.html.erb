<div class="container mt-4" >
	<div class="row">
		<div class="col col-6 mx-auto">
			<div class="card mb-5 mx-auto">
				<div class="row no-gutters">
					<% if @user.profile_picture.attached? == true %>
					<div class="col-md-4">
						<%= image_tag @user.profile_picture, alt: 'profile picture', class: 'card-img' %>
					</div>
					<% end %>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">My Profile</h5>
							<% if @user.first_name != nil %> 
							<p class="card-text"><%= @user.first_name %></p>
							<% end %>
							<% if @user.last_name != nil %> 
							<p class="card-text"><%= @user.last_name.upcase %></p>
							<% end %> 
							<p class="card-text"><%= @user.email %></p>
							<p class="card-text"><%= link_to "Edit your profile", edit_user_path, class: "btn btn-sm btn-primary" %></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="h3 mb-2 border-bottom border-gray">My order history</div>
	<div class="row">
	<% if current_user.orders[0] == nil %> 
		<div class="col col-4 mt-4">
		 	<div class="p">You haven't ordered any items yet.</div>
		</div>
	<% else %> 
			<% current_user.orders.each do |order| %>
		<div class="col col-4 mb-2">
			<div class="profil-box mt-3">
				<div class="mb-1"><%=order.created_at %></div>	
					<% order.items.each do |item| %>
					<div class="media text-muted pt-3">
						<%= image_tag item.image_url, class: 'mr-2 rounded W35' %>
						<p class="media-body pb-3 mb-0 small border-bottom border-gray">
							<strong class="d-block text-dark"><%= item.title %></strong>
							<%= item.price.to_i %> â‚¬
						</p>
					</div>
				<% end %>
			</div>
		</div>
		<% end %>	
		<% end %>	
	</div>
</div>