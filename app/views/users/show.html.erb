	<% if @user.profile_picture.attached? == true %>
	<div class="card" style="width: 18rem;"><%= image_tag @user.profile_picture, alt: 'profile picture' %></div>
<% end %>
	<% current_user.orders.each do |order| %>
		<p>
		 Order reference number: <%= order.stripe_customer_id %>
	</p>
	<% order.items.each do |item| %>
	<div class="row text-center">
		<%= item.title %>
