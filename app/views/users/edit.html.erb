<div class="container mt-4 ">
 <div class="row">
      <div class="col col-6 mx-auto text-dark">

            <h2>Edit your personal information</h2>

            <% if @user.profile_picture.attached? == true %>
            <div class="col-md-4">
                  <%= image_tag @user.profile_picture, alt: 'profile picture', class: 'card-img' %>
            </div>
            <% end %>

            <%= form_tag user_profile_pictures_path(@user), multipart: true, class: "btn btn-sm" do %>
            <%= file_field_tag :profile_picture %>
            <%= submit_tag "Upload", class: "btn btn-success btn-sm mt-2" %>
            <% end %>

            <!-- Form zone  -->
            <%= form_tag url_for(action: 'update'), method: "patch", class: "mt-4" do %>

            <b><%= label_tag 'First Name' %></b>
            <%= text_field_tag 'first_name', @user.first_name, class: "form-control"  %>
            <br />

            <b><%= label_tag 'Last Name' %></b>
            <%= text_field_tag 'last_name', @user.last_name, class: "form-control"  %>
            <br />

            <%= submit_tag "Edit", class: "btn btn-primary mb-3" %>

            <% end %>
      </div>
</div>