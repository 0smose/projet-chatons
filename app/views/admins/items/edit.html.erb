<div class="col col-6 mx-auto mt-4 text-dark">

      <h2>Edit items's information</h2>

      <!-- Zone du formulaire -->
      <%= form_tag url_for(action: 'update'), method: "patch", class: "mt-4" do %>

     <b> <%= label_tag 'Title' %></b>
      <%= text_field_tag 'title', @item.title, class: "form-control" %>
      <br />

      <b><%= label_tag 'Description' %></b>
      <%= text_field_tag 'description', @item.description, class: "form-control"  %>
      <br />

      <b><%= label_tag 'Price' %></b>
      <%= text_field_tag 'price', @item.price, class: "form-control"  %>
      <br />

      <b><%= label_tag 'Image' %></b>
      <%= text_field_tag 'image_url', @item.image_url, class: "form-control"  %>
      <br />

      <%= submit_tag "Edit", class: "btn btn-primary mb-3" %>

      <% end %>
</div>